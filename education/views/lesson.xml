<odoo>
    <record id="view_education_lesson_list" model="ir.ui.view">
        <field name="name">education.lesson.list</field>
        <field name="model">education.lesson</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="group_id"/>
                <field name="schedule_id"/>
                <field name="homework_id"/>
            </list>
        </field>
    </record>

    <record id="view_education_lesson_form" model="ir.ui.view">
        <field name="name">education.lesson.form</field>
        <field name="model">education.lesson</field>
        <field name="arch" type="xml">
            <form>
            <header>    
                <button name="button_homework_wizard" string="Vazifa berish" type="object" class="btn-primary"/>
            </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="group_id"/>
                        <field name="schedule_id"/>
                        <field name="homework_id"/>
                    </group>
                </sheet>

                <!-- <notebook>
                    <page string="Homework submission">
                        <field name="homework_id.submission_ids">
                        <list>
                            <field name="student_id"/>
                            <field name="create_date"/>
                            <field name="state"/>
                            <field name="grade"/>
                        </list>
                    </field>
                    </page>
                </notebook> -->

            </form>
        </field>
    </record>

    <record id="view_education_lesson_search" model="ir.ui.view">
        <field name="name">education.lesson.search</field>
        <field name="model">education.lesson</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="group_id"/>
                <field name="schedule_id"/>
                <field name="homework_id"/>
            </search>
        </field>
    </record>

    <record id="action_education_lesson" model="ir.actions.act_window">
        <field name="name">Lessons</field>
        <field name="res_model">education.lesson</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_education_lesson_menu" name="Lessons" parent="education_menu" action="action_education_lesson"/>
</odoo>
