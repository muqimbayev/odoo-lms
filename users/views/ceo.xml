<odoo>
    <record id="view_users_ceo_list" model="ir.ui.view">
        <field name="name">users.ceo.list</field>
        <field name="model">users.ceo</field>
        <field name="arch" type="xml">
            <list string="CEOs">
                <field name="name"/>
                <field name="login"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <record id="view_users_ceo_form" model="ir.ui.view">
        <field name="name">users.ceo.form</field>
        <field name="model">users.ceo</field>
        <field name="arch" type="xml">
            <form string="CEO">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="name"/>
                            <field name="login"/>
                            <field name="email"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_users_ceo" model="ir.actions.act_window">
        <field name="name">CEOs</field>
        <field name="res_model">users.ceo</field>
        <field name="view_mode">list,form</field>
    
    </record>

  
    <menuitem id="menu_users_ceo" name="CEO"
              parent="menu_users_root"
              action="action_users_ceo"/>
</odoo>
