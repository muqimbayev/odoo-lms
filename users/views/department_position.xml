<odoo>
    <!-- ========================= -->
    <!--  Department Views -->
    <!-- ========================= -->
    <record id="view_users_department_list" model="ir.ui.view">
        <field name="name">users.department.list</field>
        <field name="model">users.department</field>
        <field name="arch" type="xml">
            <list string="Departments">
                <field name="name"/>
                <field name="chief_id"/>
            </list>
        </field>
    </record>

    <record id="view_users_department_form" model="ir.ui.view">
        <field name="name">users.department.form</field>
        <field name="model">users.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="chief_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_users_department" model="ir.actions.act_window">
        <field name="name">Departments</field>
        <field name="res_model">users.department</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new department</p>
        </field>
    </record>

    <!-- ========================= -->
    <!--  Positions Views -->
    <!-- ========================= -->
    <record id="view_users_positions_list" model="ir.ui.view">
        <field name="name">users.positions.list</field>
        <field name="model">users.positions</field>
        <field name="arch" type="xml">
            <list string="Positions">
                <field name="name"/>
                <field name="hiring_date"/>
                <field name="released_date"/>
                <field name="is_active"/>
            </list>
        </field>
    </record>

    <record id="view_users_positions_form" model="ir.ui.view">
        <field name="name">users.positions.form</field>
        <field name="model">users.positions</field>
        <field name="arch" type="xml">
            <form string="Position">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="hiring_date"/>
                        <field name="released_date"/>
                        <field name="is_active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_users_positions" model="ir.actions.act_window">
        <field name="name">Positions</field>
        <field name="res_model">users.positions</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a new position</p>
        </field>
    </record>

    <!-- ========================= -->
    <!--  Menu Hierarchy -->
    <!-- ========================= -->
    <!-- Root menu: Users (agar hali mavjud boâ€˜lmasa) -->
    <menuitem id="menu_users_root" name="Users" sequence="1"/>

    <!-- Submenu: Settings -->
    <menuitem id="menu_users_settings" name="Settings"
              parent="menu_users_root" sequence="100"/>

    <!-- Sub-submenus: Departments and Positions -->
    <menuitem id="menu_users_department" name="Departments"
              parent="menu_users_settings"
              action="action_users_department"
              sequence="10"/>

    <menuitem id="menu_users_positions" name="Positions"
              parent="menu_users_settings"
              action="action_users_positions"
              sequence="220"/>
</odoo>
