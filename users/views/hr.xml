<odoo>
    <record id="view_users_hr_list" model="ir.ui.view">
        <field name="name">users.hr.list</field>
        <field name="model">users.hr</field>
        <field name="arch" type="xml">
            <list string="HR Managers">
                <field name="name"/>
                <field name="login"/>
                <field name="email"/>
            </list>
        </field>
    </record>

    <record id="view_users_hr_form" model="ir.ui.view">
        <field name="name">users.hr.form</field>
        <field name="model">users.hr</field>
        <field name="arch" type="xml">
            <form string="HR Manager">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="name"/>
                            <field name="login"/>
                            <field name="email"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_users_hr" model="ir.actions.act_window">
        <field name="name">HR Managers</field>
        <field name="res_model">users.hr</field>
        <field name="view_mode">list,form</field>
      
    </record>
    <menuitem id="menu_users_hr" name="HR Managers" parent="menu_users_root" action="action_users_hr"/>
</odoo>
