<odoo>
    <record id="view_users_manager_list" model="ir.ui.view">
        <field name="name">users.manager.list</field>
        <field name="model">users.manager</field>
        <field name="arch" type="xml">
            <list string="Managers">
                <field name="name"/>
                <field name="login"/>
                <field name="email"/>
                <field name="branch_id"/>
            </list>
        </field>
    </record>

    <record id="view_users_manager_form" model="ir.ui.view">
        <field name="name">users.manager.form</field>
        <field name="model">users.manager</field>
        <field name="arch" type="xml">
            <form string="Manager">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="name"/>
                            <field name="login"/>
                            <field name="email"/>
                          <field name="branch_id" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_users_manager" model="ir.actions.act_window">
        <field name="name">Managers</field>
        <field name="res_model">users.manager</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_users_manager" name="Managers" parent="menu_users_root" action="action_users_manager"/>
</odoo>
