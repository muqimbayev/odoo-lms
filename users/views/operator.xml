<odoo>
    <record id="view_users_operator_list" model="ir.ui.view">
        <field name="name">users.operator.list</field>
        <field name="model">users.operator</field>
        <field name="arch" type="xml">
            <list string="Operators">
                <field name="name"/>
                <field name="login"/>
                <field name="email"/>
                <field name="branch_id"/>
            </list>
        </field>
    </record>

    <record id="view_users_operator_form" model="ir.ui.view">
        <field name="name">users.operator.form</field>
        <field name="model">users.operator</field>
        <field name="arch" type="xml">
            <form string="Operator">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="name" readonly="0"/>
                            <field name="login" readonly="1"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="branch_id" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_users_operator" model="ir.actions.act_window">
        <field name="name">Operators</field>
        <field name="res_model">users.operator</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_users_operator" name="Operators" parent="menu_users_root" action="action_users_operator"/>
</odoo>
