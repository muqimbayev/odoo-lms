<odoo>
    <record id="view_users_students_list" model="ir.ui.view">
        <field name="name">users.students.list</field>
        <field name="model">users.students</field>
        <field name="arch" type="xml">
            <list string="Students">
                <field name="name"/>
                <field name="login"/>
                <field name="email"/>
                <field name="branch_ids"/>
                <field name="balance"/>
            </list>
        </field>
    </record>

    <record id="view_users_students_form" model="ir.ui.view">
        <field name="name">users.students.form</field>
        <field name="model">users.students</field>
        <field name="arch" type="xml">
            <form string="Student">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="name"/>
                            <field name="login"/>
                            <field name="email"/>
                        </group>
                        <group>
                            <field name="branch_ids" widget="many2many_tags"/>
                            <field name="balance"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_users_students" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">users.students</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_users_students" name="Students" parent="menu_users_root" action="action_users_students"/>
</odoo>
