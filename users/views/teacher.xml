<odoo>
    <record id="view_users_teacher_list" model="ir.ui.view">
        <field name="name">users.teacher.list</field>
        <field name="model">users.teacher</field>
        <field name="arch" type="xml">
            <list string="Teachers">
                <field name="name"/>
                <field name="login"/>
                <field name="email"/>
                <field name="department_id"/>
                <field name="postion"/>
                <field name="branch_ids"/>
                <field name="salary"/>
                <field name="work_schedule"/>
            </list>
        </field>
    </record>

    <record id="view_users_teacher_form" model="ir.ui.view">
        <field name="name">users.teacher.form</field>
        <field name="model">users.teacher</field>
        <field name="arch" type="xml">
            <form string="Teacher">
                <sheet>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="name" readonly="1"/>
                            <field name="login" readonly="1"/>
                            <field name="email"/>
                            <field name="department_id"/>
                            <field name="postion"/>
                        </group>
                        <group>
                            <field name="branch_ids" widget="many2many_tags"/>
                            <field name="certification_id" widget="many2many_tags"/>
                            <field name="salary"/>
                            <field name="work_schedule"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_users_teacher" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">users.teacher</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_users_root" name="Users" sequence="1"/>
    <menuitem id="menu_users_teacher" name="Teachers" parent="menu_users_root" action="action_users_teacher"/>
</odoo>
